	<!-- ========== Replace stuff category for crafting ========== -->

	<Operation Class="PatchOperationReplace">
		<xpath>*/ThingDef[@ParentName="BaseMeleeWeapon_Sharp" or @ParentName="BaseMeleeWeapon_Blunt"]/stuffCategories/li[.="Metallic"]</xpath>
